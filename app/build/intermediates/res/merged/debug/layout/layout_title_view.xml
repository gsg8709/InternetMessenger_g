<?xml version="1.0" encoding="utf-8"?>
<!-- 标题栏 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_title"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/title_bg" >
	<ImageView
		android:id="@+id/btn_return"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_return"
		android:visibility="gone" />
	<ImageView
		android:id="@+id/btn_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_choose_contacts_bg"
		android:visibility="gone" />
	<ImageView
		android:id="@+id/btn_title_invisible"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_choose_contacts_bg"
		android:visibility="invisible" />
	<ImageView
		android:id="@+id/btn_return_invisible"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_choose_contacts_bg"
		android:visibility="invisible" />
	<TextView
		android:id="@+id/tv_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:layout_toLeftOf="@+id/btn_title_invisible"
		android:layout_toRightOf="@+id/btn_return_invisible"
		android:gravity="center"
		android:singleLine="true"
		android:textColor="@android:color/white"
		android:textSize="22sp" />
	<ImageView
		android:id="@+id/btn_left_add"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_right"
		android:visibility="gone" />
	<Button
		android:id="@+id/btn_title_finish"
		android:layout_width="65dip"
		android:layout_height="40dip"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:background="@drawable/btn_blue"
		android:minWidth="42.669983dip"
		android:paddingLeft="8.0dip"
		android:paddingRight="8.0dip"
		android:text="完成"
		android:textColor="@android:color/white"
		android:visibility="gone" />
	<Button
		android:id="@+id/btn_title_return"
		android:layout_width="78dip"
		android:layout_height="45dip"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="15dip"
		android:background="@drawable/btn_blue"
		android:minWidth="42.669983dip"
		android:paddingLeft="8.0dip"
		android:paddingRight="8.0dip"
		android:text="返回"
		android:textColor="@android:color/white"
		android:visibility="gone" />
	<ImageView
		android:id="@+id/btn_title_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_right"
		android:visibility="gone" />
	<ImageView
		android:id="@+id/btn_title_write"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_write"
		android:visibility="gone" />
	<ImageView
		android:id="@+id/btn_title_del"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_del_img"
		android:visibility="gone" />
	<ImageView
		android:id="@+id/btn_title_send"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_send"
		android:visibility="gone" />
	<ImageView
		android:id="@+id/btn_title_choose"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_choose"
		android:visibility="gone" />
	<ImageView
		android:id="@+id/btn_title_save"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/btn_save"
		android:visibility="gone" />
</RelativeLayout>