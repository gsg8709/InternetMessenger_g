<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_chat_input_inter_sms"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:orientation="vertical" >
	<EditText
		android:id="@+id/et_title"
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:background="@drawable/edit_input"
		android:hint="请输入短信正文的主题"
		android:paddingLeft="8dip"
		android:paddingRight="8dip"
		android:singleLine="true"
		android:textColor="#c5c5c5"
		android:textColorHint="#c5c5c5"
		android:textSize="16.0sp" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="horizontal"
			android:textColor="@android:color/white" >
			<EditText
				android:id="@+id/et_content"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/edit_input"
				android:gravity="top|left"
				android:hint="请输入文字插入图片录音"
				android:padding="8dip"
				android:textColor="#c5c5c5"
				android:textColorHint="#c5c5c5"
				android:textSize="16.0sp" />
			<ImageView
				android:id="@+id/iv_img"
				android:layout_width="40dip"
				android:layout_height="40dip"
				android:layout_alignBottom="@+id/et_content"
				android:layout_alignRight="@+id/et_content"
				android:layout_margin="5dip"
				android:scaleType="centerCrop"
				android:src="@drawable/bg_image" />
		</RelativeLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="2.0"
			android:orientation="vertical" >
			<Button
				android:id="@+id/btn_inter_sms_send"
				android:layout_width="fill_parent"
				android:layout_height="50dip"
				android:layout_weight="1.0"
				android:background="@drawable/btn_gray2"
				android:text="发送"
				android:textColor="#666666"
				android:textSize="16.0sp" />
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="@drawable/sms_list_driver" />
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:layout_marginTop="3dip"
				android:background="@drawable/sms_list_driver" />
			<Button
				android:id="@+id/btn_choose_img"
				android:layout_width="fill_parent"
				android:layout_height="50dip"
				android:layout_weight="1.0"
				android:background="@drawable/btn_gray2"
				android:text="照片"
				android:textColor="#666666"
				android:textSize="16.0sp" />
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="@drawable/sms_list_driver" />
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:layout_marginTop="3dip"
				android:background="@drawable/sms_list_driver" />
			<Button
				android:id="@+id/btn_preview"
				android:layout_width="fill_parent"
				android:layout_height="50dip"
				android:layout_weight="1.0"
				android:background="@drawable/btn_gray2"
				android:text="预览"
				android:textColor="#666666"
				android:textSize="16.0sp" />
		</LinearLayout>
	</LinearLayout>
	<Button
		android:id="@+id/btn_record"
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:layout_weight="1.0"
		android:background="@drawable/btn_blue2"
		android:text="按住说话"
		android:textColor="#01a189"
		android:textSize="16.0sp" />
</LinearLayout>