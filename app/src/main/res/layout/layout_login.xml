<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_view" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="30dip"
        android:orientation="vertical"
        android:paddingLeft="10.659973dip"
        android:paddingRight="10.659973dip">

        <EditText
            android:id="@+id/edittext_identifier"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="6.659973dip"
            android:background="@drawable/login_input_top"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="textEmailAddress"
            android:paddingLeft="10.559998dip"
            android:paddingRight="9.23999dip"
            android:textColorHint="#ff97999d"
            android:textSize="16.0sp">

        </EditText>

        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/login_input_under"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="10.559998dip"
            android:paddingRight="9.23999dip"
            android:textColorHint="#ff97999d"
            android:textSize="16.0sp" />

        <CheckBox
            android:id="@+id/cb_rem_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.659973dip"
            android:layout_marginTop="15dip"
            android:button="@drawable/check_box_login"
            android:checked="true"
            android:text="记住密码"
            android:textColor="#444444"
            android:textSize="16.0sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/verif_imageview"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/icon_meassage_p" />
            <EditText
                android:id="@+id/verif_et"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="1.0"
                android:background="@drawable/edit_input_blue"
                android:ems="10"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:hint="请输入验证码"
                android:inputType="textEmailAddress"
                android:paddingLeft="10.559998dip"
                android:paddingRight="9.23999dip"
                android:textColorHint="#ff97999d"
                android:textSize="16.0sp">

            </EditText>

            <Button
                android:id="@+id/send_verification_code"
                android:text="点击获取"
                style="@style/v2_common_button_small_green"
                android:textSize="16.0sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/v2_common_button_big_green"
            android:layout_marginTop="20.0dip"
            android:text="登录"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/btn_register"
            style="@style/v2_common_button_big_green"
            android:layout_marginTop="10.659973dip"
            android:text="注册"
            android:textSize="16.0sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>