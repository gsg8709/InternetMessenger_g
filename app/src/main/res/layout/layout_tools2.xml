<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_alignParentTop="true"
        layout="@layout/layout_title_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/HookMsg_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notes_imageview"
            android:layout_below="@+id/notes_imageview"
            android:src="@drawable/tool_icon_left_down_unsel" />

        <ImageView
            android:id="@+id/Setting_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/notes_imageview"
            android:layout_alignTop="@+id/HookMsg_imageview"
            android:src="@drawable/tool_icon_right_down_unsel" />

        <ImageView
            android:id="@+id/notes_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:src="@drawable/tool_icon_up_unsel" />
    </RelativeLayout>

</RelativeLayout>